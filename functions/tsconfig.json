{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "types": ["jest", "node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", ".eslintrc.js","src/credentials.json"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
